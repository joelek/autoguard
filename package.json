{
	"bin": {
		"autoguard": "./build/autoguard-cli/index.js"
	},
	"devDependencies": {
		"@types/node": "^14.14.43",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"@joelek/ts-stdlib": "github:joelek/ts-stdlib"
	},
	"license": "MIT",
	"main": "./build/autoguard-lib/index.js",
	"name": "@joelek/ts-autoguard",
	"repository": {
		"type": "git",
		"url": "https://github.com/joelek/ts-autoguard.git"
	},
	"scripts": {
		"build": "rm -rf ./build/ && npx tsc --build",
		"clean": "rm -rf ./build/ ./node_modules/",
		"preversion": "npm run build && git add ./",
		"postversion": "git push && git push --tags",
		"test:guards": "node ./build/autoguard-cli/index.js --root=./test/guards/",
		"test:recursion": "node ./build/autoguard-cli/index.js --root=./test/recursion/",
		"test:modules": "node ./build/autoguard-cli/index.js --root=./test/modules/",
		"test:rpc": "node ./build/autoguard-cli/index.js --root=./test/rpc/",
		"test": "npm run test:guards && npm run test:recursion && npm run test:modules && npm run test:rpc"
	},
	"version": "4.3.0"
}
